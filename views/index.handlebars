<h1>Burgers!</h1>

<div class="row">
  <div class="col-6">
    <h3>Burgers that are not devoured!</h3>

    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="col-6">
    <h3>Burgers that are devoured!</h3>
    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<div class="row">
  <h3>Add a Burger</h3>
  <form class="create-form">

    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
      <label for="devoured">devoured?</label><br>
      <input type="radio" name="devoured" value="1" checked> Devoured!<br>
      <input type="radio" name="devoured" value="0"> Fresh
    </div>

    <button type="submit">Grill Time!</button>
  </form>
</div>